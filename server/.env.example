# 数据库配置
DATABASE_URL="postgresql://postgres:password@localhost:5432/hoyodb?schema=public"

# JWT 配置
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# 服务器配置
PORT=3000
NODE_ENV=development

# WebDAV / OpenList 配置
# OpenList 的 WebDAV 服务地址（注意结尾的斜杠）
WEBDAV_URL=http://localhost:5244/dav/
WEBDAV_USERNAME=admin
WEBDAV_PASSWORD=your-password
# 素材存储的根目录路径
WEBDAV_BASE_PATH=/CM

# OpenList 公开访问 URL (用于生成文件访问链接)
# 格式为: http://your-openlist-host/d
OPENLIST_PUBLIC_URL=http://localhost:5244/d

# 前端 URL (用于 CORS，如需配置)
CLIENT_URL=http://localhost:5173

